<Window x:Class="SkyJukebox.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:skyJukebox="clr-namespace:SkyJukebox"
        x:Name="SettingsControl"
        Title="Settings - Sky Jukebox" Height="343" Width="343" ShowInTaskbar="False" Topmost="True" WindowStyle="ToolWindow">
    <Window.Resources>
        <skyJukebox:VolumeConverter x:Key="VolumeConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl>
            <TabItem Header="_Interface">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Center" Content="Restore last MiniPlayer location on startup" IsChecked="{Binding ElementName=SettingsControl, Path=Settings.RestoreLocation.Value}"/>
                    <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Center" Content="Disable Aero Glass Effect" IsChecked="{Binding ElementName=SettingsControl, Path=Settings.DisableAeroGlass.Value}"/>
                    <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Content="Text Scrolling Delay (higher is slower):"/>
                    <xctk:DoubleUpDown Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Value="{Binding ElementName=SettingsControl, Path=Settings.TextScrollingDelay.Value}" Increment="0.01" Minimum="0" Maximum="10" ToolTip="To turn off the scrolling animation, set this value to 0."/>
                    <Button Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Content="Default"/>
                    <Label Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Content="Now Playing Format:"/>
                    <TextBox Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Text="{Binding ElementName=SettingsControl, Path=Settings.HeaderFormat.Value}" ToolTip="See below for the format."/>
                    <Button Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Content="Default"/>
                    <ScrollViewer Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Center" Height="132">
                        <TextBlock>
                            Use ( ) right after a variable for a fallback value <LineBreak/>
                            Example: $TI($FN) = "Title" or "FileName" if there is no title <LineBreak/>
                            Use $ to escape ( or ) <LineBreak/>
                            Example: $TI$($FN$) = "Title(FileName)" <LineBreak/>
                            Use $ to escape $ <LineBreak/>
                            Example: $$$TI = "$Title" <LineBreak/>
                            $FN is the File Name <LineBreak/>
                            $FD is the File Directory <LineBreak/>
                            $FP is the File Path <LineBreak/>
                            $TI is the Title <LineBreak/>
                            $P1 is the first Performer <LineBreak/>
                            $PJ is all the Performers <LineBreak/>
                            $A1 is the first Album Artist <LineBreak/>
                            $AJ is all the Album Artists <LineBreak/>
                            $AL is the Album <LineBreak/>
                            $TN is the Track Number <LineBreak/>
                            $G1 is the first Genre <LineBreak/>
                            $GJ is all the Genres <LineBreak/>
                            $YR is the Year <LineBreak/>
                            $DU is the Duration <LineBreak/>
                            $CO is the Codec <LineBreak/>
                            $BT is the Bitrate <LineBreak/>
                        </TextBlock>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Pe_rsonalization">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Content="Recolor Icons" IsChecked="{Binding ElementName=SettingsControl, Path=Settings.EnableRecolor.Value}"/>
                    <Button Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Content="Choose Icon Color..."/>
                    <Button Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Content="Background Color..."/>
                    <Label Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Content="Transparency/Alpha:"/>
                    <xctk:IntegerUpDown Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Minimum="0" Maximum="255" Increment="1" Value="{Binding ElementName=SettingsControl, Path=Settings.BgColor.A}"/>
                    <Button Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Content="Default"/>
                    <Button Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Content="Progress Color..."/>
                    <Label Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Content="Transparency/Alpha:"/>
                    <xctk:IntegerUpDown Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Minimum="0" Maximum="255" Increment="1" Value="{Binding ElementName=SettingsControl, Path=Settings.ProgressColor.A}"/>
                    <Button Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Content="Default"/>
                    <Label Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Content="Skin:"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center" ItemsSource="{Binding ElementName=SettingsControl, Path=SkinManager.SkinRegistry}" DisplayMemberPath="Key" SelectedValuePath="Key" SelectedValue="{Binding ElementName=SettingsControl, Path=SelectedSkin}"/>
                </Grid>
            </TabItem>
            <TabItem Header="_Playback">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Content="Output Device:"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" ItemsSource="{Binding ElementName=SettingsControl, Path=OutputDevices}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectedValue="{Binding ElementName=SettingsControl, Path=Settings.PlaybackDevice}"/>
                    <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Content="Volume:"/>
                    <xctk:IntegerUpDown Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Increment="1" Minimum="0" Maximum="200" Value="{Binding ElementName=SettingsControl, Path=PlaybackManager.Volume, Converter={StaticResource VolumeConverter}}"/>
                    <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Content="L/R Balance:"/>
                    <xctk:IntegerUpDown Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Increment="1" Minimum="-100" Maximum="100" Value="{Binding ElementName=SettingsControl, Path=PlaybackManager.Balance, Converter={StaticResource VolumeConverter}}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Hot_keys">
                <CheckBox Content="Disable Hotkeys (&quot;Gaming Mode&quot;)" IsChecked="{Binding ElementName=SettingsControl, Path=KeyBindingManager.Disable}"/>
            </TabItem>
            <TabItem Header="Plu_gins">
                Not yet implemented.
            </TabItem>
            <TabItem Header="Advanced">
                
            </TabItem>
        </TabControl>
        <Button Grid.Column="0" Grid.Row="1" Content="Save" Width="100" Margin="0,8" HorizontalAlignment="Left" Click="Save_Click"/>
        <Button Grid.Column="0" Grid.Row="1" Content="Discard" Width="100" Margin="0,8" HorizontalAlignment="Right" Click="Discard_Click"/>
    </Grid>
</Window>
