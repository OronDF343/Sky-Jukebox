<Window x:Class="SkyJukebox.PlaylistEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Playlist Editor - Sky Jukebox" Height="343" Width="343" Icon="tg32i.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem Header="_New Playlist"/>
                <MenuItem Header="_Open Playlist"/>
                <MenuItem Header="_Save Playlist"/>
                <MenuItem Header="Save Playlist _As..."/>
                <Separator/>
                <MenuItem Header="Show Mini_Player" IsCheckable="True"/>
                <MenuItem Header="Hide _This Window"/>
                <MenuItem Header="_Hide All Windows"/>
                <Separator/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Add Files"/>
                <MenuItem Header="Add _Folder"/>
                <Separator/>
                <MenuItem Header="Move To _Top"/>
                <MenuItem Header="Move To _Bottom"/>
                <MenuItem Header="Move _Up"/>
                <MenuItem Header="Move _Down"/>
                <Separator/>
                <MenuItem Header="_Remove Selected"/>
                <MenuItem Header="Remove A_ll"/>
                <Separator/>
                <MenuItem Header="_Sort Playlist">
                    <MenuItem Header="By _File Name"/>
                    <MenuItem Header="By _Title"/>
                    <MenuItem Header="By _Artists"/>
                    <MenuItem Header="By Album A_rtist"/>
                    <MenuItem Header="By A_lbum"/>
                    <MenuItem Header="By Track _Number"/>
                    <MenuItem Header="By _Genre"/>
                    <MenuItem Header="By _Year"/>
                    <MenuItem Header="By _Rating"/>
                    <MenuItem Header="By _Duration"/>
                    <MenuItem Header="By _Codec"/>
                    <MenuItem Header="By _Bitrate"/>
                    <MenuItem Header="C_ustom Sort..."/>
                </MenuItem>
                <MenuItem Header="_Merge Playlists..."/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_File Name" IsCheckable="True"/>
                <MenuItem Header="_Title" IsCheckable="True"/>
                <MenuItem Header="_Artists" IsCheckable="True"/>
                <MenuItem Header="Album A_rtist" IsCheckable="True"/>
                <MenuItem Header="A_lbum" IsCheckable="True"/>
                <MenuItem Header="Track _Number" IsCheckable="True"/>
                <MenuItem Header="_Genre" IsCheckable="True"/>
                <MenuItem Header="_Year" IsCheckable="True"/>
                <MenuItem Header="_Rating" IsCheckable="True"/>
                <MenuItem Header="_Duration" IsCheckable="True"/>
                <MenuItem Header="_Codec" IsCheckable="True"/>
                <MenuItem Header="_Bitrate" IsCheckable="True"/>
            </MenuItem>
            <MenuItem Header="_Playback">
                <MenuItem Header="_Play/Pause/Resume"/>
                <MenuItem Header="_Stop"/>
                <MenuItem Header="P_revious"/>
                <MenuItem Header="_Next"/>
                <Separator/>
                <MenuItem Header="S_huffle" IsCheckable="True"/>
                <MenuItem Header="_Loop Type">
                    <MenuItem Header="_None" IsCheckable="True"/>
                    <MenuItem Header="_Single" IsCheckable="True"/>
                    <MenuItem Header="_All" IsCheckable="True"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Settings"/>
                <MenuItem Header="Media _Encoder"/>
                <MenuItem Header="_Tag Editor"/>
                <MenuItem Header="Advanced _Debug Stuff"/>
            </MenuItem>
            <MenuItem Header="Plu_gins">
                <MenuItem Header="_Configure..."/>
                <Separator/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="User _Guide"/>
                <MenuItem Header="_About"/>
                <MenuItem Header="Check for _Update"/>
            </MenuItem>
        </Menu>
        <ToolBar HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top"/>
        <ToolBar HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top"/>
        <ListView Grid.Row="3">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="_File Name"/>
                    <GridViewColumn Header="_Title"/>
                    <GridViewColumn Header="_Artists"/>
                    <GridViewColumn Header="Album A_rtist"/>
                    <GridViewColumn Header="A_lbum"/>
                    <GridViewColumn Header="Track _Number"/>
                    <GridViewColumn Header="_Genre"/>
                    <GridViewColumn Header="_Year"/>
                    <GridViewColumn Header="_Rating"/>
                    <GridViewColumn Header="_Duration"/>
                    <GridViewColumn Header="_Codec"/>
                    <GridViewColumn Header="_Bitrate"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
