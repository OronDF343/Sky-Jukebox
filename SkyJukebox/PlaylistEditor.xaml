<Window x:Class="SkyJukebox.PlaylistEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Playlist Editor - Sky Jukebox" Height="343" Width="343" Icon="tg32i.ico" Closed="Window_Closed" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem Header="_New Playlist" Click="NewPlaylist_Click"/>
                <MenuItem Header="_Open Playlist" Click="OpenPlaylist_Click"/>
                <MenuItem Header="_Save Playlist" Click="SavePlaylist_Click"/>
                <MenuItem Header="Save Playlist _As..." Click="SavePlaylistAs_Click"/>
                <Separator/>
                <MenuItem Header="Show Mini_Player" IsCheckable="True"/>
                <MenuItem Header="Hide _This Window"/>
                <MenuItem Header="_Hide All Windows"/>
                <Separator/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Add Files" Click="AddFiles_Click"/>
                <MenuItem Header="Add _Folder" Click="AddFolder_Click"/>
                <Separator/>
                <MenuItem Header="Move To _Top" Click="MoveToTop_Click"/>
                <MenuItem Header="Move To _Bottom" Click="MoveToBottom_Click"/>
                <MenuItem Header="Move _Up" Click="MoveUp_Click"/>
                <MenuItem Header="Move _Down" Click="MoveDown_Click"/>
                <Separator/>
                <MenuItem Header="_Remove Selected" Click="RemoveSelected_Click"/>
                <MenuItem Header="Remove A_ll" Click="RemoveAll_Click"/>
                <Separator/>
                <MenuItem Header="_Sort Playlist">
                    <MenuItem Header="By _File Name"/>
                    <MenuItem Header="By _Title"/>
                    <MenuItem Header="By _Performers"/>
                    <MenuItem Header="By Album _Artists"/>
                    <MenuItem Header="By A_lbum"/>
                    <MenuItem Header="By Track _Number"/>
                    <MenuItem Header="By _Genre"/>
                    <MenuItem Header="By _Year"/>
                    <MenuItem Header="By _Duration"/>
                    <MenuItem Header="By _Codec"/>
                    <MenuItem Header="By _Bitrate"/>
                    <MenuItem Header="C_ustom Sort..."/>
                </MenuItem>
                <MenuItem Header="_Merge Playlists..."/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_File Name" IsCheckable="True"/>
                <MenuItem Header="_Title" IsCheckable="True"/>
                <MenuItem Header="_Performers" IsCheckable="True"/>
                <MenuItem Header="Album _Artists" IsCheckable="True"/>
                <MenuItem Header="A_lbum" IsCheckable="True"/>
                <MenuItem Header="Track _Number" IsCheckable="True"/>
                <MenuItem Header="_Genre" IsCheckable="True"/>
                <MenuItem Header="_Year" IsCheckable="True"/>
                <MenuItem Header="_Duration" IsCheckable="True"/>
                <MenuItem Header="_Codec" IsCheckable="True"/>
                <MenuItem Header="_Bitrate" IsCheckable="True"/>
            </MenuItem>
            <MenuItem Header="_Playback">
                <MenuItem Header="_Play/Pause/Resume"/>
                <MenuItem Header="_Stop"/>
                <MenuItem Header="P_revious"/>
                <MenuItem Header="_Next"/>
                <Separator/>
                <MenuItem Header="S_huffle" IsCheckable="True"/>
                <MenuItem Header="_Loop Type">
                    <MenuItem Header="_None" IsCheckable="True"/>
                    <MenuItem Header="_Single" IsCheckable="True"/>
                    <MenuItem Header="_All" IsCheckable="True"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Settings"/>
                <MenuItem Header="Media _Encoder"/>
                <MenuItem Header="_Tag Editor"/>
                <MenuItem Header="Advanced _Debug Stuff"/>
            </MenuItem>
            <MenuItem Header="Plu_gins">
                <MenuItem Header="_Configure..."/>
                <Separator/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="User _Guide"/>
                <MenuItem Header="_About"/>
                <MenuItem Header="Check for _Update"/>
            </MenuItem>
        </Menu>
        <ToolBar HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top"/>
        <ToolBar HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top"/>
        <ListView x:Name="PlaylistView"  Grid.Row="3">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="_File Name" DisplayMemberBinding="{Binding FileName}"/>
                    <GridViewColumn Header="_Title" DisplayMemberBinding="{Binding TagFile.Tag.Title}"/>
                    <GridViewColumn Header="_Performers" DisplayMemberBinding="{Binding TagFile.Tag.JoinedPerformers}"/>
                    <GridViewColumn Header="Album _Artists" DisplayMemberBinding="{Binding TagFile.Tag.JoinedAlbumArtists}"/>
                    <GridViewColumn Header="A_lbum" DisplayMemberBinding="{Binding TagFile.Tag.Album}"/>
                    <GridViewColumn Header="Track _Number" DisplayMemberBinding="{Binding TagFile.Tag.Track}"/>
                    <GridViewColumn Header="_Genre" DisplayMemberBinding="{Binding TagFile.Tag.JoinedGenres}"/>
                    <GridViewColumn Header="_Year" DisplayMemberBinding="{Binding TagFile.Tag.Year}"/>
                    <GridViewColumn Header="_Duration" DisplayMemberBinding="{Binding Duration}"/>
                    <GridViewColumn Header="_Codec" DisplayMemberBinding="{Binding Extension}"/>
                    <GridViewColumn Header="_Bitrate" DisplayMemberBinding="{Binding Bitrate}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
