<Window x:Class="SkyJukebox.MiniPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sky Jukebox MiniPlayer" Height="48" Width="512" Topmost="True" Background="White" Loaded="Window_Loaded" WindowStyle="None" SourceInitialized="Window_SourceInitialized" MouseDown="Window_MouseDown" ShowInTaskbar="False" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--<Label x:Name="mainLabel" Content="Sky Jukebox" HorizontalAlignment="Left" Width="117" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="32" FontSize="14" Focusable="True"/>-->
        <TextBox Name="mainLabel" HorizontalAlignment="Left" Width="109" VerticalAlignment="Center" Height="32" FontSize="14" Focusable="True" TextAlignment="Center" Margin="4,4,0,4" Background="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalScrollBarVisibility="Disabled">
            Welcome to Sky Jukebox
        </TextBox>
        <Button Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="29" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="previousButton_Click">
            <Image Source="Icons/previous-icon-16.png" />
        </Button>
        <Button x:Name="playButton" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="29" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="playButton_Click">
            <Image x:Name="playButtonImage" Source="Icons/play-icon-16.png" />
        </Button>
        <Button Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="29" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="nextButton_Click">
            <Image Source="Icons/next-icon-16.png" />
        </Button>
        <Button Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="29" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="stopButton_Click">
            <Image Source="Icons/stop-icon-16.png" />
        </Button>
        <Button x:Name="shuffleButton" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="29" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="shuffleButton_Click">
            <Image Source="Icons/shuffle-icon-16.png" />
        </Button>
        <Button x:Name="loopButton" Grid.Column="6" HorizontalAlignment="Center" VerticalAlignment="Center" Width="29" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="loopButton_Click">
            <Image Source="Icons/repeat-icon-16.png" />
        </Button>
        <Button Grid.Column="7" HorizontalAlignment="Center" VerticalAlignment="Center" Width="29" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="openPlaylistButton_Click">
            <Image Source="Icons/iconmonstr-play-file-icon-16.png" />
        </Button>
        <Button Grid.Column="8" HorizontalAlignment="Center" VerticalAlignment="Center" Width="29" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="editButton_Click">
            <Image Source="Icons/iconmonstr-edit-5-icon-16.png" />
        </Button>
        <Button Grid.Column="9" HorizontalAlignment="Center" VerticalAlignment="Center" Width="29" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="settingsButton_Click">
            <Image Source="Icons/iconmonstr-gear-5-icon-16.png" />
        </Button>
        <Button x:Name="zoomButton" Grid.Column="10" HorizontalAlignment="Center" VerticalAlignment="Center" Width="29" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="zoomButton_Click">
            <Image Source="Icons/iconmonstr-magnifier-6-icon-16.png" />
        </Button>
        <Button Grid.Column="11" HorizontalAlignment="Center" VerticalAlignment="Center" Width="29" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="minimizeButton_Click">
            <Image Source="Icons/iconmonstr-window-remove-icon-16.png" />
        </Button>
        <Button Grid.Column="12" HorizontalAlignment="Center" VerticalAlignment="Center" Width="29" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="aboutButton_Click">
            <Image Source="Icons/iconmonstr-info-2-icon-16.png" />
        </Button>
        <Button Grid.Column="13" HorizontalAlignment="Center" VerticalAlignment="Center" Width="29" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="powerButton_Click">
            <Image Source="Icons/iconmonstr-power-off-icon-16.png" />
        </Button>
    </Grid>
</Window>