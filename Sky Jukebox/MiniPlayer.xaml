<Window x:Class="SkyJukebox.MiniPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sky Jukebox MiniPlayer" Height="48" Width="576" Topmost="True" Background="White" Loaded="Window_Loaded" WindowStyle="None" SourceInitialized="Window_SourceInitialized" MouseDown="Window_MouseDown" ShowInTaskbar="False" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="32"/>
        </Grid.ColumnDefinitions>
        <!--<Label x:Name="mainLabel" Content="Sky Jukebox" HorizontalAlignment="Left" Width="117" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="32" FontSize="14" Focusable="True"/>-->
        <TextBox Name="mainLabel" HorizontalAlignment="Left" Width="136" VerticalAlignment="Center" Height="32" FontSize="14" Focusable="True" Margin="4,4,0,4" Background="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ToolTip="Now Playing" BorderThickness="0" TextAlignment="Center" Cursor="Arrow" IsHitTestVisible="False">
            Welcome to Sky Jukebox
        </TextBox>
        <Button Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="previousButton_Click" ToolTip="Previous">
            <Image Source="Icons/previous-icon-16.png" />
        </Button>
        <Button x:Name="playButton" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="playButton_Click" ToolTip="Play">
            <Image x:Name="playButtonImage" Source="Icons/play-icon-16.png" />
        </Button>
        <Button Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="nextButton_Click" ToolTip="Next">
            <Image Source="Icons/next-icon-16.png" />
        </Button>
        <Button Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="stopButton_Click" ToolTip="Stop">
            <Image Source="Icons/stop-icon-16.png" />
        </Button>
        <Button x:Name="shuffleButton" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="shuffleButton_Click" ToolTip="Shuffle">
            <Image Source="Icons/shuffle-icon-16.png" />
        </Button>
        <Button x:Name="loopButton" Grid.Column="6" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="loopButton_Click" ToolTip="Loop">
            <Image Source="Icons/repeat-icon-16.png" />
        </Button>
        <Button Grid.Column="7" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="openPlaylistButton_Click" ToolTip="Open Playlist">
            <Image Source="Icons/iconmonstr-play-file-icon-16.png" />
        </Button>
        <Button Grid.Column="8" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="editButton_Click" ToolTip="Playlist Editor">
            <Image Source="Icons/iconmonstr-edit-5-icon-16.png" />
        </Button>
        <Button Grid.Column="9" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="settingsButton_Click" ToolTip="Settings">
            <Image Source="Icons/iconmonstr-gear-5-icon-16.png" />
        </Button>
        <Button x:Name="zoomButton" Grid.Column="10" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="zoomButton_Click" ToolTip="???">
            <Image Source="Icons/iconmonstr-magnifier-6-icon-16.png" />
        </Button>
        <Button Grid.Column="11" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="minimizeButton_Click" ToolTip="Minimize to System Tray">
            <Image Source="Icons/iconmonstr-window-remove-icon-16.png" />
        </Button>
        <Button Grid.Column="12" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="aboutButton_Click" ToolTip="About">
            <Image Source="Icons/iconmonstr-info-2-icon-16.png" />
        </Button>
        <Button Grid.Column="13" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="32" BorderBrush="Transparent" Background="Transparent" BorderThickness="0" Click="powerButton_Click" ToolTip="Exit">
            <Image Source="Icons/iconmonstr-power-off-icon-16.png" />
        </Button>
    </Grid>
</Window>