<TreeView x:Class="SkyJukebox.Lib.TreeBrowser.FileTreeBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:treeBrowser="clr-namespace:SkyJukebox.Lib.TreeBrowser"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="TreeControl" ScrollViewer.HorizontalScrollBarVisibility="Visible">
    <TreeView.Resources>
        <treeBrowser:HeaderToImageConverter x:Key="HeaderToImageConverter"/>
        <Style TargetType="{x:Type TreeViewItem}">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Name="Icon" Width="16" Height="16" Stretch="Fill" Source="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TreeViewItem}}, Path=Tag, Converter={StaticResource HeaderToImageConverter}}"/>
                            <TextBlock Text="{Binding}" Margin="5,0" />
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </TreeView.Resources>
</TreeView>
